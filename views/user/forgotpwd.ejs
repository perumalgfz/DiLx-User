<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>DiLX User Forgot </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>

<body class="container login-bg" style="margin-top: 50px;">

    <div class="card login-box">
        <div class="card-header">
            <h4 class="login-header"> Forgot Password</h4>
        </div>

        <div class="card-body">
            <form action="/newpwd" method="post">

                <div class="form-group">
                    <label>Email*: </label>
                    <input type="email" class="form-control" name="email"
                        autocomplete="off" minlength="3" maxlength="30">
                        <% if(typeof alert != 'undefined') { %>
                            <% alert.forEach(function(error) { %>
                            <span style="color: #FF0000"> <%= error.msg %> </span>
                            <% }) %>
                        <% } %>
                </div>               

                <div class="form-group">
                    <p> New password send to registered email.</p>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info login-btn" value="Get New Password" />
                </div>
                <div class="form-group">
                    <p class="signup-link"> Not an user <a href="/add">Signup now  </a> | <a href="/">Login </a></p> 
                </div>
            </form>
        </div>
    </div>
    <% if (messages.error) { %>
        <div class="alert alert-danger login-msg" role="alert">
            <%- messages.error %>
        </div>
    <% } %>

</body>

</html>